<% if time_to_post? %>

  <div class="page_header">
    <img src="/user.png" alt="Daily Users" />
    <h1>Find Me a Pair Pal!</h1>
    <p class="lead">
      #DLTB: (it) doesn't look too bad...
      <div>
        <form action="/submit" method="post">
          <fieldset>
            <input type="text" name="first_name" value="first name"
              id="first-name-input" maxlength="50" required />
            <input type="text" name="last_name" value="last name"
              id="last-name-input" maxlength="50" required />
            <select name="project_preference">
              <option value="daily">Daily Challenge</option>
              <option value="evening">Evening Challenge</option>
              <option value="other">Other</option>
            </select>
            <input class="btn btn-lg btn-default" type="submit" value="Add" />
          </fieldset>
        </form>
      </div>
    </p>
  </div>

  <div class="container">
    <div class="section_containers">
      <% daily_users.each do |user| %>
        <div class="daily_users">
          <img src="/danelson.jpg" alt="Danelson Rosa" class="img-circle img-responsive" />
          <p class="lead">
            <%= user["first_name"] %>
            <%= user["last_name"] %>
            <small>
              <% if user["type"] == 'Afternoon' %>
                (a)
              <% elsif user["type"] == 'Evening' %>
                (b)
              <% else %>
                (c)
              <% end %>
            </small>
          </p>
        </div>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>

<% end %>

<% if time_to_pair? %>

  <div class="page_header">
    <img src="/collaboration.png" alt="Collaborators" />
    <h1>Pairings</h1>
    <p class="lead">
      Badasses unite!
    </p>
  </div>

  <div class="container">
    <div class="section_containers lead center">
      <% pairings.each do |pair| %>
        <div style="float: left;">
          <img src="/kevin.jpg" alt="Kevin Larrabee" class="img-circle img-responsive" />
          <br/>
          <%= pair["first_first_name"] %> <%= pair["first_last_name"] %>
        </div>

        <div style="float: left;">
            <small><%= pair["type"].downcase %></small>
            <br/>
            <img src="/double_arrow.png" class ="img-responsive" alt="Double arrow" />
        </div>

        <div style="float: left;">
          <img src="/kevin.jpg" alt="Kevin Larrabee" class="img-circle img-responsive" />
          <br/>
          <%= pair["second_first_name"] %> <%= pair["second_last_name"] %>
        </div>
        <div class="clear"></div>
      <% end %>
      <div class="clear"></div>
    </div>
  </div>

<% end %>
