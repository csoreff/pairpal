  <div class="page_header">
    <img src="/user.png" alt="Daily Users" />
    <h1>Find Me a Pair Pal!</h1>
    <p class="lead">
      #DLTB: doesn't look too bad...
      <div>
        <form action="/adduser" method="post">
          <fieldset>
            <input type="text" name="first_name"
              id="first-name-input" maxlength="50" placeholder="first name" required />
            <input type="text" name="last_name"
              id="last-name-input" maxlength="50"  placeholder="last name" required />
            <select name="project_preference">
              <option value="daily">Daily Challenge</option>
              <option value="evening">Evening Challenge</option>
              <option value="other">Other</option>
            </select>
            <input class="btn btn-lg btn-default" type="submit" value="Add" />
          </fieldset>
        </form>
      </div>
    </p>
  </div>

  <div class="container">
    <div class="section_containers">

      <% daily_users.each do |user| %>
        <div class="daily_users">
          <img src="/launch.png" alt="launcher" class="img-circle img-responsive default-launcher-pic" />
          <p class="lead">
            <%= user["first_name"] %>
            <%= user["last_name"] %>
            <small>
              <% if user["type"] == 'Daily' %>
                (d)
              <% elsif user["type"] == 'Evening' %>
                (e)
              <% else %>
                (o)
              <% end %>
            </small>
          </p>
        </div>
      <% end %>

    </div>
    <div class="clear"></div>
  </div>

  <div class="page_header">
    <a href="/pair">
      <img src="/collaboration.png" alt="Collaborators" />
    </a>
    <h1>Pairings</h1>
    <p class="lead">
      Badasses unite!
    </p>
  </div>

  <div class="container">
    <div class="section_containers lead center">

      <% pairings.each do |pair| %>
        <div style="float: left;">
          <img src="/launch.png" alt="launcher" class="img-circle img-responsive default-launcher-pic" />
          <br/>
          <%= pair["first_first_name"] %> <%= pair["first_last_name"] %>
        </div>

        <div style="float: left;">
            <small><%= pair["type"].downcase %></small>
            <br/>
            <img src="/double_arrow.png" class ="img-responsive" alt="Double arrow" />
        </div>

        <div style="float: left;">
          <img src="/launch.png" alt="launcher" class="img-circle img-responsive default-launcher-pic" />
          <br/>
          <%= pair["second_first_name"] %> <%= pair["second_last_name"] %>
        </div>
        <div class="clear"></div>
      <% end %>

      <div class="clear"></div>
    </div>
  </div>

<div class="center">
  <a href="/clear">
    <div class="clear-clearings">clear</div>
  </a>
</div>



